{
  "parser": "@babel/eslint-parser",
  "extends": ["airbnb", "./.eslintrc-pending-fix", "prettier"],
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "no-use-before-define": 0,
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreTrailingComments": true
      }
    ],
    "react/prop-types": ["error", { "ignore": ["navigation"] }],
    "function-paren-newline": [2, "consistent"],
    "lines-between-class-members": [2, "always"],
    "quote-props": [2, "consistent-as-needed"],
    "object-curly-newline": [2, { "consistent": true }],
    "no-return-assign": [2, "except-parens"],
    "no-console": 0,
    "global-require": 0,
    "class-methods-use-this": 0,
    "react/sort-comp": 0
  },

  "globals": {
    "fetch": true
  },

  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": ["./src", "./assets"],
        "alias": {
          "map": [
            ["buttons", "./src/components/globals/buttons"],
            ["loaders", "./src/components/globals/loaders"],
            ["text", "./src/components/globals/text"],
            ["alerts", "./src/components/globals/alerts"],
            ["textInput", "./src/components/globals/textInput"]
          ]
        }
      }
    }
  }
}
